<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/above_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bottom_view"
                android:orientation="vertical">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_14sdp">



                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10ssp"
                        android:orientation="vertical"
                        android:padding="@dimen/_8sdp">


                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <RadioButton
                                android:id="@+id/radioButton1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:checked="true"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Inappropriate/offensive content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="MisLeading/suspicious information"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                            <RadioButton
                                android:id="@+id/radioButton3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Spam"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />
                            <RadioButton
                                android:id="@+id/radioButton4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/black"
                                android:padding="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Other"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />


                        </RadioGroup>
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_Model"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerVertical="true"
                        android:gravity="top"
                        android:visibility="gone"
                        android:paddingTop="@dimen/_8sdp"
                        android:layout_toRightOf="@+id/ic_location"
                        android:hint="Reason"
                        android:paddingStart="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/edit_text_box"
                        android:paddingLeft="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_medium"
                        android:singleLine="true"
                        android:textColorHint="@color/quantum_grey"
                        android:textSize="@dimen/_10sdp"/>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/submit_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/button_enable"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"/>


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>


        </ScrollView>



    </RelativeLayout>
</layout>