<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BusinessDetailActivity">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_baseline_arrow_back_24"
                    android:visibility="visible"
                    app:tint="@color/black" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_business_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_14sdp"
                    android:adjustViewBounds="true" />


                <LinearLayout
                    android:id="@+id/lyt_expand_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/car_owner_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />
                    <TextView
                        android:id="@+id/business_name_on_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />
                    <TextView
                        android:id="@+id/owner_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/quantum_grey"></View>




                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/business_specialization_on_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Vehicle Code "
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/vehicle_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Chasis number "
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/chassie_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Plate number "
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/plate_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Insurance"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/insure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Insurance number"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/insure_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Insurance type"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/insure_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Insurance date"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/insure_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/hint_color"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/business_operatinghrs_on_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Opening Hours"
                        android:visibility="gone"
                        android:textColor="@color/detail_black"
                        android:textSize="@dimen/_15sdp" />


                </LinearLayout>
                <Button
                    android:id="@+id/btn_back_tomain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_search"
                    android:text="Back"
                    android:backgroundTint="@color/colortxtgreen"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@android:color/white" />

                <!--   <fragment
                       android:id="@+id/detailsmap"
                       android:layout_width="match_parent"
                       android:layout_height="600dp"
                       android:name="com.google.android.gms.maps.SupportMapFragment"/>-->
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>