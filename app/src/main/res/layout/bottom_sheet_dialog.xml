<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_report"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/report"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_report3x">

        </com.makeramen.roundedimageview.RoundedImageView>



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/report"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left|center"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Report Post"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_hide"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/invisible3x">

        </com.makeramen.roundedimageview.RoundedImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/user_image"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left|center"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Hide Post"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/_50sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/edit"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/imgedit3x">

        </com.makeramen.roundedimageview.RoundedImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/edit"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left|center"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Edit Post"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:visibility="gone"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp">

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/delete3x"
            app:tint="@color/red">

        </ImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="bottom"
            android:layout_toRightOf="@id/delete"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="left|center"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="Delete Post"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red"
            android:textSize="@dimen/_13sdp" />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/delete_sheet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@id/user_image"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="Close"
        android:layout_marginLeft="@dimen/_8sdp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red"

        android:textSize="@dimen/_13sdp" />


</androidx.appcompat.widget.LinearLayoutCompat>